<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <CheckBox
        android:id="@+id/shoopingcardBox"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#fafafafa"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/shoopingcardImage"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp" />

            <TextView
                android:id="@+id/shoopingcardTitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="默认内容" />

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/shoopingcardPrice"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="价格" />

                <TextView
                    android:id="@+id/shoopingcardCount"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="数量" />

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/shoopingcardCountPrice"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="共1件商品，合计元" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <Button
                android:id="@+id/shoopingcardDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="删除" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/shoppingcardMinus"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="-" />

            <TextView
                android:id="@+id/shoopingcardCount2"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="1" />

            <TextView
                android:id="@+id/shoppingcardAdd"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="+" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>