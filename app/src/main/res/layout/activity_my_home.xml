<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="bwie.com.manshopping.MyActivity.MyHome">

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/shouye"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:width="0dp"
            android:button="@null"
            android:checked="true"
            android:drawableTop="@drawable/select"
            android:gravity="center"
            android:text="首页"
            android:textColor="@drawable/color" />

        <RadioButton
            android:id="@+id/fenlei"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:width="0dp"
            android:button="@null"
            android:drawableTop="@drawable/fenlei"
            android:gravity="center"
            android:text="分类"
            android:textColor="@drawable/color" />

        <RadioButton
            android:id="@+id/gouwuche"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:width="0dp"
            android:button="@null"
            android:drawableTop="@drawable/gouwu"
            android:gravity="center"
            android:text="购物车"
            android:textColor="@drawable/color" />

        <RadioButton
            android:id="@+id/geren"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:width="0dp"
            android:button="@null"
            android:drawableTop="@drawable/geren"
            android:gravity="center"
            android:text="个人"
            android:textColor="@drawable/color" />

    </RadioGroup>

    <FrameLayout
        android:id="@+id/frageLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/radioGroup"></FrameLayout>
</RelativeLayout>
